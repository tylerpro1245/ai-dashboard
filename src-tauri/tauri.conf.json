{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ai-dashboard",
  "version": "0.1.0",
  "identifier": "com.tylerpro1245.ai-dashboard",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "vite --port 5174",
    "beforeBuildCommand": "vite build"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": ["default"]    
    },
    "windows": [
      {
        "label": "main",
        "title": "ai-dashboard",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
