{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ai-dashboard",
  "version": "0.1.0",
  "identifier": "com.yourname.ai_dashboard",        
  "build": {
    "frontendDist": "../dist",                      
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",                            
        "title": "ai-dashboard",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "devtools": true                            
      }
    ],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
